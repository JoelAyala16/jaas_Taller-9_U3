@{
    var title = ViewData["Title"] ?? "Panel Pizzería";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>@title - Pizzería Admin</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="bg-light">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Pizzería Admin</a>
            <div>
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 flex-row gap-3">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Categorias" asp-action="Index">Categorías</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Productos" asp-action="Index">Productos</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container mb-5">
        @RenderBody()
    </main>

    <footer class="text-center text-muted mb-4">
        <small>Pizzería Admin • @DateTime.Now.Year</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
